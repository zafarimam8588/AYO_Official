{{!-- Newsletter Email Template --}}

<!-- Subject/Title -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr>
    <td style="padding-bottom: 25px;">
      <h2 class="content-title" style="color: #2C3E50; margin: 0 0 15px 0; font-size: 26px; font-weight: 600; line-height: 1.3;">
        {{subject}}
      </h2>
      <!-- Tricolor accent bar -->
      <div style="width: 60px; height: 3px; background: linear-gradient(90deg, #FF9933, #138808); border-radius: 2px;"></div>
    </td>
  </tr>
</table>

<!-- Message Body -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr>
    <td class="message-text" style="color: #4A5568; line-height: 1.8; font-size: 16px; padding-bottom: 30px;">
      {{{splitParagraphs message}}}
    </td>
  </tr>
</table>

<!-- CTA Button -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: 20px auto 30px;">
  <tr>
    <td style="border-radius: 30px; background: linear-gradient(135deg, #FF9933, #138808); box-shadow: 0 4px 15px rgba(255, 153, 51, 0.25);">
      <a href="{{frontendUrl}}" target="_blank" class="cta-button" style="display: inline-block; padding: 14px 40px; color: #FFFFFF; text-decoration: none; font-weight: 600; font-size: 15px; border-radius: 30px;">
        Visit Our Website
      </a>
    </td>
  </tr>
</table>

<!-- Stay Connected Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr>
    <td style="background: linear-gradient(135deg, #FFF5EB 0%, #E8F5E8 100%); border-radius: 12px; padding: 25px; text-align: center;">
      <p style="color: #2C3E50; margin: 0 0 12px 0; font-size: 15px; font-weight: 600;">
        &#x1F91D; Stay Connected With Us
      </p>
      <p style="color: #64748B; margin: 0 0 15px 0; font-size: 14px; line-height: 1.6;">
        Follow our journey and be part of the change we're creating together
      </p>

      <!-- Social Icons -->
      <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: 0 auto;">
        <tr>
          <td style="padding: 0 8px;">
            <a href="{{socialLinks.twitter}}" target="_blank" style="display: inline-block; text-decoration: none;">
              <table role="presentation" cellspacing="0" cellpadding="0" border="0">
                <tr>
                  <td style="width: 36px; height: 36px; background-color: #1DA1F2; border-radius: 50%; text-align: center; vertical-align: middle;">
                    <span style="color: #ffffff; font-size: 14px; font-weight: bold; line-height: 36px;">X</span>
                  </td>
                </tr>
              </table>
            </a>
          </td>
          <td style="padding: 0 8px;">
            <a href="{{socialLinks.facebook}}" target="_blank" style="display: inline-block; text-decoration: none;">
              <table role="presentation" cellspacing="0" cellpadding="0" border="0">
                <tr>
                  <td style="width: 36px; height: 36px; background-color: #1877F2; border-radius: 50%; text-align: center; vertical-align: middle;">
                    <span style="color: #ffffff; font-size: 16px; font-weight: bold; line-height: 36px;">f</span>
                  </td>
                </tr>
              </table>
            </a>
          </td>
          <td style="padding: 0 8px;">
            <a href="{{socialLinks.instagram}}" target="_blank" style="display: inline-block; text-decoration: none;">
              <table role="presentation" cellspacing="0" cellpadding="0" border="0">
                <tr>
                  <td style="width: 36px; height: 36px; background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%); border-radius: 50%; text-align: center; vertical-align: middle;">
                    <span style="color: #ffffff; font-size: 14px; line-height: 36px;">&#x1F4F7;</span>
                  </td>
                </tr>
              </table>
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
