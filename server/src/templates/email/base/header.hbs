<!-- Tricolor Header -->
<tr>
  <td class="header-padding" style="background: linear-gradient(135deg, #FF9933 0%, #FFFFFF 50%, #138808 100%); padding: 30px 40px; text-align: center;">

    {{#if logoUrl}}
    <img src="{{logoUrl}}" alt="AYO" width="60" height="60" style="margin-bottom: 15px; border-radius: 50%; display: block; margin-left: auto; margin-right: auto;">
    {{/if}}

    <h1 class="header-title" style="color: #2C3E50; margin: 0; font-size: 28px; font-weight: 700; text-shadow: 1px 1px 2px rgba(255,255,255,0.8); line-height: 1.3;">
      {{#if title}}
        {{title}}
      {{else}}
        Azad Youth Organisation
      {{/if}}
    </h1>

    {{#if subtitle}}
    <p class="header-subtitle" style="color: #4A5568; margin: 12px 0 0; font-size: 14px; font-weight: 400; line-height: 1.5;">
      {{subtitle}}
    </p>
    {{/if}}

  </td>
</tr>

<!-- Tricolor accent bar -->
<tr>
  <td style="height: 4px; background: linear-gradient(90deg, #FF9933, #FFFFFF, #138808);"></td>
</tr>
