{{!-- OTP Email Template --}}

<!-- Title -->
<h2 class="content-title" style="color: #333333; margin: 0 0 20px 0; font-size: 24px; font-weight: 600; text-align: center;">
  {{title}}
</h2>

<!-- Message -->
<p style="color: #666666; line-height: 1.6; margin: 0 0 30px 0; text-align: center; font-size: 16px;">
  {{message}}
</p>

<!-- OTP Display Box -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin: 25px 0;">
  <tr>
    <td align="center">
      <table role="presentation" cellspacing="0" cellpadding="0" border="0">
        <tr>
          <td style="background: #FFFFFF; border: 3px solid #138808; padding: 25px 40px; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
            <h2 class="otp-display" style="color: #138808; font-size: 42px; margin: 0; letter-spacing: 10px; font-weight: bold; font-family: 'Courier New', monospace;">
              {{otp}}
            </h2>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Expiry Warning -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin: 20px 0;">
  <tr>
    <td style="background: #FFF3CD; border: 1px solid #FFEAA7; border-radius: 8px; padding: 15px;">
      <p style="color: #856404; margin: 0; font-size: 14px; text-align: center;">
        &#x23F0; This OTP will expire in <strong>{{expiryMinutes}} minutes</strong>
      </p>
    </td>
  </tr>
</table>

<!-- Security Note -->
<p style="color: #666666; line-height: 1.6; margin: 30px 0 0 0; text-align: center; font-size: 14px;">
  If you didn't request this {{#if isVerification}}verification{{else}}password reset{{/if}}, please ignore this email or contact our support team.
</p>

<!-- Automated Message Note -->
<p style="color: #999999; font-size: 12px; margin: 20px 0 0 0; text-align: center;">
  This is an automated message from Azad Youth Organisation. Please do not reply to this email.
</p>
